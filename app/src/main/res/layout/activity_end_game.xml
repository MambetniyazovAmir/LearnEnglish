<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EndGameActivity"
        android:background="@color/colorPrimary"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right_answers"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="16sp"
            android:id="@+id/rightAnswers"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wrong_answers"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/rightAnswers"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="16sp"
            android:id="@+id/wrongAnswers"
            />

    <ImageView
            android:layout_width="72dp"
            android:background="@drawable/round_button"
            android:layout_height="72dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/wrongAnswers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_replay_black_24dp"
            android:id="@+id/replay"
            app:layout_constraintLeft_toRightOf="@+id/menu"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />

    <ImageView
            android:id="@+id/menu"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/round_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_menu_black_24dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/wrongAnswers"
            app:layout_constraintRight_toLeftOf="@+id/replay"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            />
</android.support.constraint.ConstraintLayout>